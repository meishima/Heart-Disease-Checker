<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="HeartDiseaseChecker.HistoryWindow"
        Title="HistoryWindow"
        Width="950" Height="700">
    <Grid RowDefinitions="Auto,*">
        <StackPanel>
            <TextBlock Grid.Row="0" Text="History of Saved Results" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
            <Button Name="BtnDeleteAll" Click="BtnDeleteAll_Click" Content="Clear All Data" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel Name="HistoryPanel" Spacing="10"/>
        </ScrollViewer>
    </Grid>
</Window>
